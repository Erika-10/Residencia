<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageViewPostCard"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/textViewTitlePostCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Materia  "
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="16dp"
            android:maxLines="1"
            android:textColor="@color/colorblack"
            />

        <TextView
            android:id="@+id/textViewDescriptionPostCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripcion "
            android:layout_margin="5dp" />
        <TextView
            android:id="@+id/textViewPrecioPostCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Precio "
            android:layout_margin="5dp" />

        <TextView
            android:id="@+id/textViewHorarioPostCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Horario "
            android:layout_margin="5dp" />
        <TextView
            android:id="@+id/textViewNivelPostCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nivel educativo "
            android:layout_margin="5dp" />
    </LinearLayout>

</androidx.cardview.widget.CardView>